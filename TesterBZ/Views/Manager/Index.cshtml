@model List<TesterBZ.Models.AvailableTestViewModel>

@{
    ViewBag.Title = "Управление опросами";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>@ViewBag.Title <a href="@(Url.Action("AddTest"))"><span class="glyphicon glyphicon-plus"></span></a></h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Наименование опроса</td>
                            <td>Кол-во вопросов</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].TestName</td>
                                <td>@Model[i].QuestionsCount</td>
                                <td>
                                    <div class="text-right">
                                        <a href="@(Url.Action("EditTest","Manager",new { id=Model[i].TestId }))" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> ред.</a>
                                        <a href="@(Url.Action("TestStats","Manager",new { id=Model[i].TestId }))" class="btn btn-success"><span class="glyphicon glyphicon-stats"></span> стат.</a>
                                        <a href="@(Url.Action("AccessManage","Manager",new { id=Model[i].TestId }))" class="btn btn-success"><span class="glyphicon glyphicon-eye-close"></span> разр.</a>
                                        <a href="@(Url.Action("RemoveTest","Manager",new { id=Model[i].TestId }))" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> удал.</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>