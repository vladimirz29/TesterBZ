
@{
    ViewBag.Title = "Добавить опрос";
}

<div class="row">
    <div class="col-md-4">
        <h2><a class="glyphicon glyphicon-backward btn btn-success" href="@(Url.Action("Index"))"></a> @ViewBag.Title</h2>
    </div>
</div>
<form action="@(Url.Action("AddTest"))" method="post">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="text-center">
                <label for="testName">Наименование:</label>
                <input type="text" name="testName" id="testName" class="form-control" placeholder="Введите наименование..." />
                <br />
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</form>
