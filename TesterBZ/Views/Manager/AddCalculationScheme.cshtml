
@{
    ViewBag.Title = "Добавить схему";
}


<div class="row">
    <div class="col-md-6">
        <h2><a class="glyphicon glyphicon-backward btn btn-success" href="@(Url.Action("CalculationSchemes"))"></a> @ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="text-center">
            <form action="" method="post">
                <label for="blockName">Наименование:</label>
                <input type="text" name="schemeName" id="blockName" class="form-control" placeholder="Введите наименование..." />
                <br />
                <button type="submit" class="btn btn-primary">Добавить</button>
            </form>
        </div>
    </div>
</div>
