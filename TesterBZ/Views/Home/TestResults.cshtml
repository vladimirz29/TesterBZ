@model TesterBZ.Models.TestResultViewModel
@{
    ViewBag.Title = "Результаты теста";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3>@(ViewBag.Title)</h3>
            </div>
            <div class="panel-body">
                <h4>@(Model.LastName)</h4>
                <h5>@(Model.FirstName)</h5>
                <h5>Набрано баллов: @(Model.Score)</h5>
                @foreach (var item in Model.BlocksResults)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3>Блок "@item.BlockName"</h3>
                                </div>
                                <div class="panel-body">
                                    <h4><strong>Краткое описание:</strong></h4>
                                    <p>@item.ShortText</p>
                                    <h4><strong>Полное описание:</strong></h4>
                                    <p>@item.LargeText</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
            </div>
            <div class="panel-footer">
                <div class="text-center">
                    <a href="@(Url.Action("Index"))" class="btn btn-primary">На главную</a>
                </div>
            </div>
        </div>
    </div>
</div>

