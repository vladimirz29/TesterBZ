@model List<TesterBZ.Models.AvailableTestViewModel>

@{
    ViewBag.Title = "Доступные опросы";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                @if (Model.Count > 0)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>#</td>
                                <td>Наименование опроса</td>
                                <td>Кол-во вопросов</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].TestName</td>
                                    <td>@Model[i].QuestionsCount</td>
                                    <td><a href="@(Url.Action("InsideTest", "Home", new { id = Model[i].TestId }))" class="btn btn-success">Перейти</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @if (Model.Count == 0)
                {
                    <div class="text-center">
                        <h4>Нет доступных опросов</h4>
                    </div>
                }
            </div>
        </div>
    </div>
</div>