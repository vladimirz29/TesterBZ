@model TesterBZ.Models.QuestionViewModel
@{
    ViewBag.Title = "Тестирование";
}

<div class="row">
    <div class="col-md-12">
        <h3>@(Model.QuestionNumber)-й из @(Model.TotalQuestions)</h3>
    </div>
</div>
<form action="@(Url.Action("Answer"))" method="post">
    <div class="block-center text-center">
        <div class="row">
            <div class="col-md-12">
                <h1>@(Model.QuestionText)</h1>
            </div>
        </div>
        <br />
        <br />
        <input type="hidden" value="@(Model.QuestionId)" name="id" />
        <input type="hidden" value="@(Model.QuestionNumber)" name="question" />
        <div class="text-center">
            <div class="row">
                <div class="col-md-12">
                    <input id="ex13" type="range" name="value" data-value="0" value="0" data-slider-ticks="[0, 1, 2, 3, 4]" data-slider-ticks-snap-bounds="30" data-slider-ticks-labels='["-2", "-1", "0", "1", "2"]' />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>@Model.QuestionAnswers[0]</h3>
            </div>
            <div class="col-md-6">
                <h3>@Model.QuestionAnswers[1]</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-8">
            <div class="btn-group btn-group-lg" role="group" aria-label="...">
                <a href="@(Url.Action("SkipAnswer",new { id=Model.QuestionId, question=Model.QuestionNumber }))" class="btn btn-default">Пропустить</a>
                <button type="submit" class="btn btn-primary">Далее</button>
            </div>
        </div>
    </div>
</form>
@section scripts
{

    <script>

        // With JQuery
        $("#ex13").slider({
            ticks: [0, 1, 2, 3, 4],
            ticks_labels: ['-2', '-1', '0', '1', '2'],
            ticks_snap_bounds: 30,
            value: 2,
            tooltip:'hide'
        });
    </script>
}
